<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Auth"
        android:background="@drawable/abstract_blue_bckg"
>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_height="wrap_content"
            android:hint="اسم المستخدم"
            app:met_floatingLabel="normal"

            app:met_baseColor="#020202"
            app:met_primaryColor="#43A047"
            app:met_errorColor="#E53935"
            app:met_minCharacters="4"
            app:met_maxCharacters="20"
            app:met_helperText="    ادخل اسم المستخدم    "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginStart="1dp"
            android:layout_width="265dp" android:id="@+id/username_tv" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/password_tv" app:layout_constraintVertical_bias="0.976"
            android:inputType="textPersonName"/>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_height="wrap_content"
            android:hint="كلمة السر"
            app:met_floatingLabel="normal"
            app:met_baseColor="#524F46"
            app:met_primaryColor="#43A047"
            app:met_errorColor="#E53935"
            app:met_minCharacters="8"
            app:met_maxCharacters="16"
            app:met_helperText="    ادخل كلمة السر    "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginStart="1dp"
            android:layout_width="265dp" android:id="@+id/password_tv" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nationalid_tv" app:layout_constraintVertical_bias="1.0"
            android:password="true"/>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_height="wrap_content"
            android:hint="بريدك الاكتروني"
            app:met_floatingLabel="normal"
            app:met_baseColor="#020202"
            app:met_primaryColor="#43A047"
            app:met_errorColor="#E53935"
            app:met_minCharacters="0"
            app:met_maxCharacters="14"
            app:met_helperText="    ادخل بريدك الاكتروني    "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginStart="1dp"
            android:layout_width="265dp" android:id="@+id/email_tv" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nationalid_tv" app:layout_constraintVertical_bias="0.166"/>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_height="wrap_content"
            android:hint="رقمك القومي"
            app:met_floatingLabel="normal"
            app:met_baseColor="#020202"
            app:met_primaryColor="#43A047"
            app:met_errorColor="#E53935"
            app:met_minCharacters="0"
            app:met_maxCharacters="14"
            app:met_helperText="    أدخل رقمك القومي     "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="312dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginStart="1dp"
            android:layout_width="265dp" android:id="@+id/nationalid_tv" android:inputType="number"/>
    <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/signup_btn"
            android:layout_width="197dp"
            android:layout_height="45dp"
            android:text="انشاء حساب جديد"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:pb_colorNormal="#00ACC1"
            app:pb_colorPressed=" 	#005073" app:pb_cornerRadius="27dp"

            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/email_tv"/>
    <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/tosignin_btn"
            android:layout_width="197dp"
            android:layout_height="45dp"
            android:text="لديك حساب ؟ قم بتسجيل الدخول"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:pb_colorNormal="#D81B60"
            app:pb_colorPressed="#E53935" app:pb_cornerRadius="27dp"

    />
    <!--custom:pb_colorNormal="@android:color/holo_blue_light"-->
    <!--custom:pb_colorPressed="@android:color/holo_blue_dark" />-->

</androidx.constraintlayout.widget.ConstraintLayout>