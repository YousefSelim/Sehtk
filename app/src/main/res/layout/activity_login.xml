<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/email_for_login_tv"
            android:layout_width="320dp"
            android:layout_height="70dp"
            app:labelText="بريدك الالكتروني"
            app:iconSignifier="@drawable/ic_email_black_24dp"
            app:hasClearButton="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="124dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.211" app:layout_constraintHorizontal_bias="0.494">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/extended_edit_text"
                android:layout_width="196dp"
                android:layout_height="27dp"
                android:inputType="textMultiLine"/>


    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/password_for_login_tv"
            android:layout_width="320dp"
            android:layout_height="100dp"
            app:labelText="كلمة السر"
            app:iconSignifier="@drawable/ic_vpn_key_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="124dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.387" app:minCharacters="8" app:maxCharacters="22"
    >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/extended_edit_text1"
                android:layout_width="196dp"
                android:layout_height="27dp"
        />


    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/signin_for_login_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="تسجيل الدخول"
            android:background="@drawable/background2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/password_for_login_tv" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.028"/>
    <Button
            android:text="لا تمتلك حسابًا ؟ انشئ حسابًا الآن"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/to_signup_page_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_for_login_btn" android:background="@drawable/background2"/>
    app:spinning_bar_width="4dp" <!-- Optional -->
    app:spinning_bar_color="#FFF" <!-- Optional -->
    app:spinning_bar_padding="6dp" <!-- Optional -->
</androidx.constraintlayout.widget.ConstraintLayout>